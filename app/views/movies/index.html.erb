<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Movies</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3" style="text-align: center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.name %></td>
          <td><%= movie.description %></td>
          <td><%= link_to 'Show details', movie %></td>
          <td><%= link_to 'Edit', edit_movie_path(movie) if current_user.admin? %></td>
          <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } if current_user.admin? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Movie', new_movie_path if current_user.admin? %>
</div>